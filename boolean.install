/**
 * Implements hook_field_schema().
 */
function boolean_field_schema($field) {
  switch ($field['type']) {
    case 'number_boolean' :
      $columns = array(
        'value' => array(
          'type' => 'int',
          'not null' => TRUE,
          'default' => -1,
        ),
      );
      break;
  }
  return array(
    'columns' => $columns,
  );
}
